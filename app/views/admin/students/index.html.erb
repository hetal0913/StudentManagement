<p id="notice"><%= notice %></p>
<div class="col-9">
  <h1 class="pt-10" style="display: inline;">Students</h1>
  <p class="float-right"><%= link_to 'New Student', new_admin_student_path, class: "btn btn-primary" %></p>
  
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @students.each do |student| %>
        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td><%= link_to 'Show', admin_student_path(student) %></td>
          <td><%= link_to 'Edit', edit_admin_student_path(student) %></td>
          <td><%= link_to 'Destroy', admin_student_path(student), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



