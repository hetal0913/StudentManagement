<p id="notice">
  <%= notice %>
</p>
<div class="col-9">
  <div style="margin-bottom: 10px;">
    <div id="accordion">
      <div class="card">
        <div class="card-header" id="headingOne">
          <h5 class="mb-0">
            <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false"
              aria-controls="collapseOne">
              Advance Filter
            </button>
          </h5>
        </div>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
          <div class="card-body">
            <%= search_form_for @q, url: admin_students_path do |f| %>
              <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name_cont, class: "form-control"%>
              </div>
          
              <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name_cont, class: "form-control"%>
              </div>
          
              <div class="form-group">
                <%= f.label :email %>
                <%= f.text_field :email_cont, class: "form-control"%>
              </div>
              <!-- <div class="form-group" style="display: inline-flex;">
                <%#= f.label "Enter Value" %>
                  <%#= f.search_field :first_name_or_last_name_or_email_cont, class: "form-control" %>
              </div> -->

              <div class="form-group" style="display: inline;">
                <%= f.submit "Search" , class: "btn btn-primary" , style: "margin-top: 10px;" %>
              </div>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div>
    <h1 class="pt-10" style="display: inline;">Students</h1>
    <p class="float-right">
      <%= link_to 'New Student' , new_admin_student_path, class: "btn btn-primary" %>
    </p>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td>
              <%= student.first_name %>
            </td>
            <td>
              <%= student.last_name %>
            </td>
            <td>
              <%= student.email %>
            </td>
            <td>
              <%= link_to 'Show' , admin_student_path(student) %>
            </td>
            <td>
              <%= link_to 'Edit' , edit_admin_student_path(student) %>
            </td>
            <td>
              <%= link_to 'Destroy' , admin_student_path(student), method: :delete, data: { confirm: 'Are you sure?' }
                %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
    <%= paginate @students%>
  </div>
</div>